#!/usr/bin/env ruby
require 'tag'
require 'thumb'

@@tag = Tag.new

Dir["public/images/**/*{jpg,JPG,jpeg}"].each do |img|
  img.sub!(/public/,'')
  unless @@tag.find("all").include? img
    puts img
    @@tag.update(img,false)
    @@tag.toggle("work",img) if @@tag.set?("portfolio",img)
    Thumb.new(img)
  end
end
@@tag.save
